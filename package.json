{
  "name": "portfolio",
  "version": "1.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o --host 0.0.0.0 --disable-host-check",
    "watch:localnetwork": "ng build --watch --configuration development",
    "build": "ng build",
    "build:href": "ng build --base-href ./",
    "build:ghpages": "ng build --output-path docs --base-href /portfolio-angular-roberjacobo/",
    "build:github": "ng build && npm run delete:docs && npm run build:href && npm run copy:dist && npm run create-cname",
    "build:github2": "ng build && npm run delete:docs && npm run build:ghpages && npm run copy:dist && npm run create-cname",
    "watch": "ng build --watch --configuration development",
    "watch-n": "nodemon portfolio",
    "test": "ng test",
    "delete:docs": "del docs",
    "copy:dist": "copyfiles dist/portfolio/* ./docs -f",
    "create-cname": "echo 'www.robjacobo.dev' > ./docs/CNAME",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "aos": "^3.0.0-beta.6",
    "globals": "^13.24.0",
    "nodemon": "^3.0.2",
    "primeicons": "^7.0.0",
    "primeng": "^19.1.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "5.5.4"
  }
}
